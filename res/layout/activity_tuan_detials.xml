<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayPurchaseDetialInfoActivity" >
 <RelativeLayout
        android:id="@+id/id_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:gravity="center"
        android:background="@drawable/android_title_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团购详情"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20.0dip" 
            />
        </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_picture"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="8dp" 
        android:layout_below="@+id/id_title">
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tv_tuan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_picture"
        android:layout_marginLeft="8dp"
        android:layout_centerInParent="true"
        android:text="标题" />
    <TextView
        android:id="@+id/tv_tuan_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tuan_title"
        android:layout_marginLeft="8dp"
        android:text="描述" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tuan_description" >

        <TextView
            android:id="@+id/tv_date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/vp_picture"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="开始日期:" />

        <TextView
            android:id="@+id/tv_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="8dp"
            android:text="开始日期" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_deadline_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="截止日期:" />

        <TextView
            android:id="@+id/tv_deadline_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"

            android:text="截止日期" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout2"
        android:orientation="vertical">
        <TextView
        android:id="@+id/tv_tuan_detials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="团购详情" />
        <TextView
        android:id="@+id/tv_tuan_restrictions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="配送描述" />
    </LinearLayout>

    

</RelativeLayout>