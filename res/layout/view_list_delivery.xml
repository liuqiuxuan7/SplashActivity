<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_shopping"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="centerInside"
        android:src="@drawable/a" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/img_shopping"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_shopping_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="坑爹的产品"
            android:textColor="#000000"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/text_shopping_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_shopping_name"
            android:gravity="center"
            android:text="10000"
            android:textColor="#ffe45f41" />

        <TextView
            android:id="@+id/text_shopping_delivery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_shopping_price"
            android:gravity="center"
            android:text="顺丰快递" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_shopping" >

        <TextView
            android:id="@+id/text_shopping_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="地址：厦门市思明区软件园望海路55号" />
    </LinearLayout>

</RelativeLayout>